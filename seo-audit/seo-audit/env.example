# Database (SQLite by default for dev, Postgres for production)
DATABASE_URL=file:./dev.db

# Disable DB to run fully serverless (inline results only)
# When true, results are returned in the HTTP response and not persisted
# DISABLE_DB=true
# Expose to client for inline UI behavior
# NEXT_PUBLIC_DISABLE_DB=true

# Redis (optional for background jobs; if not set, audits run inline)
# REDIS_URL=redis://localhost:6379

# Force inline audit processing even if REDIS_URL is set
# FORCE_INLINE_AUDIT=true

# Feature flags
FEATURE_PLAYWRIGHT_FALLBACK=false

# Optional APIs
# PageSpeed Insights API Key (optional - enables Core Web Vitals)
PSI_API_KEY=

# Google Search Console OAuth (optional - enables GSC data)
GSC_CLIENT_ID=
GSC_CLIENT_SECRET=
GSC_REDIRECT_URI=

# Auth.js Configuration
AUTH_SECRET=your-auth-secret-here
AUTH_EMAIL_SERVER_HOST=smtp.gmail.com
AUTH_EMAIL_SERVER_PORT=587
AUTH_EMAIL_SERVER_USER=your-email@gmail.com
AUTH_EMAIL_SERVER_PASS=your-app-password
AUTH_EMAIL_FROM=noreply@aiseoturbo.com

# Rate Limiting for Auth
AUTH_RATE_LIMIT_SIGNIN=5
AUTH_RATE_LIMIT_WINDOW=900

