# =============================================================================
# SEO Audit Tool - Environment Configuration
# =============================================================================

# Database Configuration
# SQLite for development, PostgreSQL for production
DATABASE_URL=file:./dev.db

# Redis Configuration (optional for background jobs)
# If not set, audits run inline
REDIS_URL=redis://localhost:6379

# Authentication & Security
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here
AUTH_EMAIL_SERVER=smtp://user:pass@smtp.example.com:587
AUTH_EMAIL_FROM=noreply@aiseoturbo.com

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Google Search Console OAuth
GSC_CLIENT_ID=your_gsc_client_id
GSC_CLIENT_SECRET=your_gsc_client_secret
GSC_REDIRECT_URI=http://localhost:3001/api/auth/gsc/callback

# PageSpeed Insights API
PSI_API_KEY=your_psi_api_key

# Feature Flags
FEATURE_PLAYWRIGHT_FALLBACK=false
FORCE_INLINE_AUDIT=false

# Development Settings
NEXT_TELEMETRY_DISABLED=1
FAST_REFRESH=false

# Worker Configuration
WORKER_CONCURRENCY=3

# Rate Limiting Configuration
PSI_RATE_LIMIT_QPS=1
PSI_RATE_LIMIT_DAILY=20
AUDIT_RATE_LIMIT_DAILY=5
CRAWL_PAGE_LIMIT=30
JOB_CONCURRENCY_PER_DOMAIN=1

# Cache Configuration
PSI_CACHE_TTL=1800
GSC_CACHE_TTL=600

# Optional: Disable database for serverless mode
# DISABLE_DB=true
# NEXT_PUBLIC_DISABLE_DB=true
