// Datasource for SQLite by default; to switch to Postgres, change provider to "postgresql"
// and point DATABASE_URL to a Postgres connection string.
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Prisma generator
generator client {
  provider = "prisma-client-js"
}

model Run {
  id            String    @id @default(cuid())
  pageUrl       String
  targetKeyword String?
  email         String?
  status        RunStatus @default(queued)
  createdAt     DateTime  @default(now())
  audits        Audit[]
}

model Audit {
  id        String   @id @default(cuid())
  run       Run      @relation(fields: [runId], references: [id])
  runId     String
  json      String   // JSON string of AuditResultV1
  createdAt DateTime @default(now())
}

enum RunStatus {
  queued
  running
  ready
  failed
}